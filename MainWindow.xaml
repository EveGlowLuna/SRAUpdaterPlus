<Window x:Class="SRAUpdaterPlus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SRAUpdaterPlus"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:WindowHelper.SystemBackdropType="Acrylic"
        Title="SRAUpdater+" Height="140" Width="600"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Grid Margin="10 10 10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Content="Please wait..." x:Name="progressLabel" Grid.Row="0"/>
            <ui:ProgressBar Grid.Row="1"
                        IsIndeterminate="True"
                        ShowError="False"
                        ShowPaused="False"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                            x:Name="statusBar"
                        Height="20"/>
            <ProgressBar Grid.Row="1" Value="0"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         x:Name="progressBar"
                         Height="20" Visibility="Collapsed"/>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Height="55" HorizontalAlignment="Right">
            <Button Height="30" Width="100" Content="详细信息" Margin="0 0 5 0" x:Name="ShowDetailBtn" Click="ShowDetailBtn_Click"></Button>
            <Button Height="30" Width="100" Content="执行操作" IsEnabled="False" Margin="0 0 5 0" x:Name="ActionBtn" Click="ActionBtn_Click"></Button>
            <Button Height="30" Width="100" Content="取消" x:Name="CancelBtn" Click="CancelBtn_Click"></Button>
        </StackPanel>
        <TextBox x:Name="LogTextBox"
             Grid.Row="2"
             Margin="0 0 0 0"
             Height="130"
             Text=""
             Visibility="Collapsed"
             TextWrapping="Wrap"
             VerticalScrollBarVisibility="Auto"
             IsReadOnly="True"
             AcceptsReturn="True"/>
    </Grid>
</Window>
